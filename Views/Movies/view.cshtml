@model Vidly.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    this is a comment
    on Multiple lines!
*@

<h2>Movie List (@Model.Movies.Count Movies)</h2>
<br /><br />
@if (Model.Movies.Count <= 0)
{
    <div class="alert alert-danger" role="alert"><strong>Uh-oh! </strong>No Movies have been found in the database</div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Movie Name</th>
        </tr>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>

        }

    </table>
}

