@model Vidly.ViewModels.CustomerListViewModel
@{
    ViewBag.Title = "view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List (@Model.Customers.Count Users)</h2>
<br />
<br />


@if (Model.Customers.Count <= 0)
{
    <div class="alert alert-danger" role="alert"><strong>Uh-oh! </strong>No users have been found in the database</div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Customer Name</th>
        </tr>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>

        }
    </table>
}


