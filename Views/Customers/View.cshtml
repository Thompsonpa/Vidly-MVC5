
@{
    ViewBag.Title = "view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List (@Model.Count Users)</h2>
<br />
<br />


@if (Model.Count <= 0)
{
    <div class="alert alert-danger" role="alert"><strong>Uh-oh! </strong>No users have been found in the database</div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Customer Name</th>
            <th><center>Membership Type</center></th>
            <th><center>Discount Rate</center></th>
        </tr>
        @foreach (var customer in Model)
        {
    <tr>
        <td>@customer.Id</td>
        <td>@Html.ActionLink((string)customer.Name, "details", "Customers", new { id = customer.Id }, null)</td>
        <td><center><label class="label label-info">@customer.MembershipType.Name</label></center></td>
        <td><center><label class="label label-success">@customer.MembershipType.DiscountRate%</label></center></td>
    </tr>

        }
    </table>
}


